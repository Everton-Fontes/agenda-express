<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg"></div>
    <div class="col-lg-10 my-3">
      <h1 class="text-center">Painel de Contatos</h1>
      <p class="text-center lead">Vamos Gerenciar os Leads</p>

      <%- include('includes/messages') %>

      <div class="row">
        <div class="col">
          <form action="/contatos/add" method="POST">
            <input type="hidden" name="_csrf" value=<%=csrfToken %>>
            <div class="form-group">
              <label for="InputName">Nome</label>
              <input
                type="text"
                class="form-control"
                id="InputName"
                placeholder="Digite o nome"
                name="first_name"
                value=<%= contato.first_name %>
              />
            </div>
            <div class="form-group">
              <label for="InputLastName">Sobrenome</label>
              <input
                type="text"
                class="form-control"
                id="InputLastName"
                placeholder="Digite o sobrenome"
                name="last_name"
                value=<%= contato.last_name %>
              />
            </div>
            <div class="form-group">
              <label for="InputEmail">Email</label>
              <input
                type="email"
                class="form-control"
                id="InputEmail"
                aria-describedby="emailHelp"
                placeholder="Escreva seu email"
                name="email"
                value=<%= contato.email %>
              />
              <small id="emailHelp" class="form-text text-muted"
                >Nós nunca compartilhamos seus dados!</small
              >
            </div>
            <div class="form-group">
              <label for="InputTelefone">Telefone</label>
              <input
                type="tel"
                class="form-control"
                id="InputTelefone"
                placeholder="Digite o ddd e o número"
                name="phonenumber"
                value=<%= contato.phonenumber %>
              />
            </div>
            <button type="submit" class="btn btn-primary btn-large">
              Salvar
            </button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg"></div>
  </div>
</div>

<%- include('includes/footer') %>
